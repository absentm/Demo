<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_item_image_imv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon"/>

    <TextView
        android:id="@+id/main_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/main_item_image_imv"
        android:text="ahhshshshshhshsdhshasdhs"
        android:textColor="@color/black_trans80"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/main_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_item_image_imv"
        android:layout_alignLeft="@+id/main_item_title_tv"
        android:layout_alignStart="@+id/main_item_title_tv"
        android:text="2015-07-21 16:52"
        android:textColor="@color/black_trans80"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_below="@+id/main_item_image_imv"
        android:background="@color/black_trans20"/>
</RelativeLayout>